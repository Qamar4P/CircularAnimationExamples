<?xml version="1.0" encoding="utf-8"?>
<com.qamar4p.circularanimation.helpers.TouchRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22000000">

    <Button
        android:id="@+id/buttonClose"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="X"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="8dp"/>

    <Space
        android:id="@+id/referencePoint"
        android:layout_above="@id/buttonClose"
        android:layout_centerHorizontal="true"
        android:layout_width="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:layout_marginBottom="80dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/buttonNo"
        android:text="No"
        android:background="@drawable/btn_selector_green"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/referencePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonYes"
        android:text="Yes"
        android:layout_marginLeft="12dp"
        android:background="@drawable/btn_selector_green"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/referencePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_above="@id/referencePoint"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:text="Hello xyz"/>

</com.qamar4p.circularanimation.helpers.TouchRelativeLayout>
